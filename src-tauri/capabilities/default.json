{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for Android platform with camera support",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default"
  ],
  "optionalPermissions": [
    {
      "name": "camera:allow-take-picture",
      "condition": {
        "feature": "camera"
      }
    },
    {
      "name": "camera:allow-record-video",
      "condition": {
        "feature": "camera"
      }
    }
  ]
}
